<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivc"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@android:drawable/ic_menu_camera" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFA500"
        android:text="Chnage Image"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/ivc"
        app:layout_constraintEnd_toEndOf="@+id/ivc"
        app:layout_constraintTop_toBottomOf="@+id/ivc" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:textSize="18dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/et1"
        app:layout_constraintBottom_toBottomOf="@+id/et2"
        app:layout_constraintStart_toStartOf="@id/et2" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="Enter your email"
        android:textSize="18dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/et2"
        app:layout_constraintBottom_toBottomOf="@+id/et3"
        app:layout_constraintStart_toStartOf="@id/et3" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="Enter your phone number"
        android:textSize="18dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/et3"
        app:layout_constraintBottom_toBottomOf="@+id/et4"
        app:layout_constraintStart_toStartOf="@id/et4" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Enter your address"
        android:textSize="18dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et3" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#57B9FF"
        android:text="Save"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/et4" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF0000"
        android:text="Delete"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/b1"
        app:layout_constraintTop_toBottomOf="@id/et4" />


</androidx.constraintlayout.widget.ConstraintLayout>
