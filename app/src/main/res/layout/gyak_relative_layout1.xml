<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="#AED9EB"
    android:padding="8dp">


    <ImageView
        android:id="@+id/iv_cam"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="16dp"
        android:src="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_cam"
        android:text="Name:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_cam"
        android:background="#fff"
        android:inputType="text"
        android:padding="10dp"
        android:text="Enter your name"
        android:textColor="#CAC8C8" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cam"
        android:layout_centerHorizontal="true"
        android:text="Address"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_address"
        android:layout_marginTop="6dp"
        android:background="#fff"
        android:inputType="text"
        android:padding="10dp"
        android:text="Enter your address"
        android:textColor="#CAC8C8" />


    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_address"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:text="Phone:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/tv_phone"
        android:background="#fff"
        android:inputType="text"
        android:padding="10dp"
        android:text="Enter your phone"
        android:textColor="#CAC8C8" />


    <Button
        android:id="@+id/btn_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#4CAF50"
        android:text="Submit" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone"
        android:layout_alignParentRight="true"

        android:layout_marginTop="16dp"
        android:backgroundTint="#F44336"
        android:text="Reset" />


</RelativeLayout>